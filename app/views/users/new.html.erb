<div id="page_wrapper">
<h1>Dodaj użytkownika</h1>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>Użytkownik nie został zapisany. <br> Błędy: <%= @voivodeship.errors.count %> </h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
  <%= f.label 'Nazwa' %><br />
  <%= f.text_field :name, class: "form-control" %>
</div>

  <div class="form-group">
    <%= f.label 'E-mail' %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= f.label "Rola" %><br>
    <%= collection_select(:user, :role_id, Role.all, :id, :name, {prompt: "Wybierz z listy"}, class: "form-control")  %>
  </div>


  <div class="form-group">
    <%= f.label "Hasło" %>
    <% if @validatable %>
    <em>(Minimum <%= @minimum_password_length %> znaków)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" , class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'Potwierdzenie hasła'%><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control"%>
  </div>

  <div class="actions">
    <%= f.submit "Zapisz" %>
  </div>
<% end %>

<br><br>
<%= link_to 'Wróć', users_path, class:"Button" %>
</div>