<div class="voivodeship_wrapper">
<h1> Użytkownicy </h1>
<%= link_to 'Dodaj użytkownika', new_user_path, class: "button" %><br><br>
</div>
<div id="page_wrapper">


  <table class="table table-striped">
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Rola</th>
      <th>E-mail</th>
      <th>Okręg wyborczy</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    
      <tr>
        <td><%= user.name %></td>
        <td><%= user.role.name %></td>
        <td><%= user.email %></td>
        <td><%= user.area_id %></td>
        <td><%= link_to 'Pokaż', user %></td>
        <td><%= link_to 'Edytuj', edit_user_path(user) %></td>
        <td><%= link_to 'Usuń', user, method: :delete, data: { confirm: 'Na pewno usunąć?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>







</div>