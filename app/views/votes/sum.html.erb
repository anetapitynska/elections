<p id="notice"><%= notice %></p>

<h1>Results ordered by committe & area</h1>

<table>
  <thead>
    <tr>
      <th>Number of votes</th>
      <th>Area</th>
      <th>Committee</th>
 
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody> 
    <% @vote.each do |vote| %>
      <tr>
        <td><%= vote.sum %></td>
         <td><%= vote.area.name %></td>
        <td><%= vote.commitee.name %></td>
        
      </tr>
   <% end %>

  </tbody>
</table>
<br><br>

<%= Vote.sum(:number) %> <br> <br>
<%= Vote.group('commitee_id','area_id').sum(:number) %> <br> <br>

<%= Vote.group(:commitee_id , :area_id).sum(:number) %> <br> <br>
<%= Vote.group('commitee_id').sum(:number) %>  <br> <br>
<h3> order by votes & commitee </h3>

<%= pie_chart Vote.group('commitee_id').sum(:number) %>




 
