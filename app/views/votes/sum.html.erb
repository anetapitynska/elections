<% if false %>

  <%= Vote.sum(:number) %> <br> <br>
  <%= Vote.group('commitee_id','area_id').sum(:number) %> <br> <br>

  <%= Vote.group(:commitee_id , :area_id).sum(:number) %> <br> <br>
  <%= Vote.group('commitee_id').sum(:number) %>  <br> <br>
