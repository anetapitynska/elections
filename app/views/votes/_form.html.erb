<%= form_for(@vote) do |f| %>
  <% if @vote.errors.any? %>
    <div id="error_explanation">
      <h2>Głos nie został zapisany. <br> Błędy: <%= @voivodeship.errors.count %> </h2>

      <ul>
      <% @vote.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Ilość głosów' %><br>
    <%= f.number_field :number , class: "form-control" %>
  </div>

 <div class="form-group">
   
     <%= f.label 'Komitet wyborczy' %><br>
     <%= collection_select(:vote, :commitee_id, Commitee.find(@assosciated_commitees), :id,  :name, {prompt: "Wybierz z listy"}, class: "form-control") %>
 
  </div>
  <div class="form-group">
     <%= f.label 'Okręg wyborczy' %><br>
    <%= collection_select(:vote, :area_id, Area.where(id: current_user.area_id), :id, :name, {prompt: "Wybierz z listy"}, class: "form-control") %>
  </div>
  


   <div class="actions"><%= f.submit "Zapisz" %>
  </div>
   
<% end %>



