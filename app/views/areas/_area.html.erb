	<div class="voivodeship_wrapper">
			<h4><%= area.name %></h4>
			<p class="comment_name"> <strong>Okręg wyborczy nr </strong> <%= area.number %> </p>
			<p class="comment_body"><strong> Ilość osób uprawnionych do głosowania: </strong><%= area.people %> </p>
			<p>


				<%= link_to 'Pokaż', voivodeship_area_path(area.voivodeship, area), class: "button" %>

		<% if current_user.role.name == "admin" %>
				<%= link_to 'Edytuj', edit_voivodeship_area_path(area.voivodeship, area), class: "button" %>
				
			     <%= link_to 'Usuń', [area.voivodeship, area],
					method: :delete,
					class: "button",
					data: { confirm: 'Na pewno usunąć?' } %>

			</p>


<% end %>


	</div>

