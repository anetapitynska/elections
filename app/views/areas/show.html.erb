<div id="page_wrapper">

<% if current_user.role.name == "admin" or current_user.area_id.to_i == @area.id %>

<%= link_to 'Edit', edit_voivodeship_area_path(@voivodeship, @area), class: "button" %> <% end %>

<% if current_user.role.name == "admin" %>

<%= link_to 'Delete', voivodeship_area_path(@voivodeship, @area), method: :delete, data: { confirm: 'Are you sure?' } ,class: "button" %>

<% end %>
<% if current_user.area_id.to_i == @area.id %>
<%= link_to 'New Vote', new_vote_path, class: "button" %>
<% end %>
<h1 class="voivodeship_name">
	<%= @area.name %> 
</h1>

<p><strong> Electorial area No. </strong> <%= @area.number %> </p>

<p ><strong>  Number of people allowed to vote:  </strong>  <%= @area.people %></p>


<p><strong>   Committees:  </strong> <%= @assosciated_commitees %> </p>

<p><strong> Ballots: </strong> <%= @area.ballots %> </p>

<p><strong> Sum of votes: </strong> <%= @suma%> </p>

<p><strong>Empty votes: </strong><%= @area.empty_votes %> </p>

<p><strong>Incorrect votes:</strong>  <%= @area.incorrect_votes %> </p>

<table class="table table-striped">
	  <thead>
	    <tr>
	      <th>Number of votes</th>
	      <th>Area</th>
	      <th>Committee</th>
	 
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody> 


	    <% @vote.each do |vote| %>
	        <% if vote.area.voivodeship_id == @voivodeship.id %>
	      <tr>
	        <td><%= vote.sum %></td>
	        <td><%= vote.area.name %></td>
	        <td><%= vote.commitee.name %></td>	        
	      </tr>
	         <% end %>
	   <% end %>
	  </tbody>
	</table>


<% if current_user.area_id.to_i == @area.id %>

  <table class="table table-striped">
  <thead>
    <tr>
      <th>Number</th>
          <th>Area</th>
              <th>Commitee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @votea.each do |vote| %>
      <% if vote.area.voivodeship_id == @voivodeship.id %>
      <tr>
        <td><%= vote.number %></td>
        <td><%= vote.area.name%></td>
        <td><%= vote.commitee.name %></td>    
        <td><%= link_to 'Show', vote %></td>
        <td><%= link_to 'Edit', edit_vote_path(vote) %></td>
        <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
   
        <% end %>
    <% end %>
  </tbody>
</table>

<br><br>
<% end %>

<%= pie_chart Vote.where(area_id: @area.id).group('commitee_id').sum(:number) %>


</div>